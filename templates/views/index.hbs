<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}

</head>
<body>
    <!-- Navbar  -->
    {{>navbar}}
    <!-- Navbar ends -->   
    <!--Main Header  -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="row">
                <div class="col-md-6 col-12 main_header_left">
                  <h1>Welcome to Our Weather App</h1>
                  <p>Get the Latest <span>Weather Update</span> of your city.</p>
                  <a href="/weather"><button>Check Now</button></a>
                </div>
                <div class="col-md-6 col-12 main_header_right">
                  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class="d-block w-100" src="images/hm1.png" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img class="d-block w-100" src="images/hm2.png" alt="Second slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                </div>
               </div>
            </div>
        </div>
    </div>
    <!--Main Header ends -->
    <!--Footer  -->
    {{>footer}}
    <!--Footer ends -->
</body>
</html>